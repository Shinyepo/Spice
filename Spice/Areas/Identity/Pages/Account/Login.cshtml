@page
@model LoginModel

<div class="border background-white-border mt-5 container col-sm-7 col-lg-5 col-md-7">
    <h1>Log In</h1>
    <div class="row">
        <div class="col-md-12">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">Log In</button>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-md-6">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                        </div>
                        <div class="col-sm-12 col-md-6 text-md-right">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
                        </div>
                    </div>
                    <div class="form-group">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend verification email</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
