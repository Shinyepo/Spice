@model Spice.Models.ViewModels.OrderDetailsSuccessViewModel

<br />
<div class="background-white">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Zamówienie potwierdzone!</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info">Nowe zamówienie</a>
        </div>
    </div>

    @if (Model.OrderHeader != null)
    {
        <div class="p-3">
            Twoje zamówienie zostało przyjęte! Niżej znajdują się szczegóły zamówienia.
        </div>
        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">
            Coś poszło nie tak :(
        </div>
    }
</div> 