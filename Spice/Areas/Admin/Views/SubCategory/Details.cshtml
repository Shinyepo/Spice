@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Spice.Extensions
<br />
<h2 class="text-info">Subcategory Details</h2>
<br />

<div class="border background-white row">
    <div class="col-12">
        <form autocomplete="off">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                   <input readonly asp-for="SubCategory.Category.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-5 offset-3">
                    <partial name="_DetailsAndBackToListButtonPartial" model="Model.SubCategory.Id"/>
                </div>
            </div>  
        </form>
    </div>
</div>